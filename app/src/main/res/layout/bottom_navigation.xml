<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <Button
        android:id="@+id/home_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="主页"
        android:drawableTop="@android:drawable/ic_menu_myplaces"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp" />

    <Button
        android:id="@+id/bookmarks_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="书签"
        android:drawableTop="@android:drawable/ic_menu_save"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp" />

    <Button
        android:id="@+id/history_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="历史"
        android:drawableTop="@android:drawable/ic_menu_recent_history"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="设置"
        android:drawableTop="@android:drawable/ic_menu_preferences"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp" />

</LinearLayout>